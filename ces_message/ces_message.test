      'object' => 'global',
      'objectid' => 0,
      'scope' => 'user',
      'scopeid' => $account->uid,
    );
    $bank->createPermission($permission);

    // Attach a field.
    $field = array(
      'field_name' => 'ces_message_test_text' ,
      'type' => 'text',
    );
    field_create_field($field);
    $instance = array(
      'label' => 'Example Field',
      'field_name' => 'ces_message_test_text',
      'entity_type' => 'ces_message_template',
      'bundle' => 'ces_message_bundle',
    );
    field_create_instance($instance);
  }

